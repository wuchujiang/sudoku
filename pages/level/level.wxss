/* level/level.wxss */
.level-container{
  display: flex;
  flex-wrap: wrap;
  padding: 0 50rpx;
}
.level-item-wrap{
  width: 25%;
}

.level-item {
  margin: 0 20rpx 40rpx 20rpx;
  background: green;
  padding-top: calc(100% - 40rpx);
  position: relative;
}

.level-counter, .level-time{
  display: block;
  text-align: center;
}

.level-content{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}