/* pages/game.wxss */
.container{
  margin: 20rpx;
  border: 5rpx solid green;
  border-radius: 10rpx;
  background-color: blue;
  padding: 5rpx;
}

.grid{
  display: flex;
}
.grid-content{
  width: 11.11111%;
}

.text-content{
  margin: 5rpx;
  padding-top: calc(100% - 10rpx);
  border-radius: 5rpx;
  background-color: #ffffff99;
  position: relative;
}

.num-content{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
  color: blue;
}

.num-text{
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-wrap{
  justify-content: space-between;
}

.input-item{
  flex: 1;
  width: 22rpx;
  height: 22rpx;
  font-size: 50rpx;
  color: orangered;
  border-radius: 5rpx;
  background-color: #ffffff99;
}
