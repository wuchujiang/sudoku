/* pages/game.wxss */
page{
  background: #f9eac1;
}
.header{
  display: flex;
  height: 70rpx;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx
}
.time{
  display: flex;
  align-items: center;
  justify-content:center;
  color: #fc7a00;
  font-size: 40rpx;
  font-weight: bold;
}
.timer-counter{
  width: 100rpx;
}
.time-img{
  background: url(data:image/svg+xml;base64,);
  width: 36rpx;
  height: 36rpx;
  background-size: 100%;
  margin-right: 10rpx;
}

.back, .home{
  width: 78rpx;
  height: 100%;
  background-size: 100%;
}

.home{
  background-image: url(data:image/png;base64,);
}

.back{
  background-image: url(data:image/png;base64,);
}
.header .title{
  text-align: center;
  color: #0b71fa;
  font-weight: bold;
}
.container{
  margin: 20rpx;
  border: 5rpx solid #449a99;
  border-radius: 10rpx;
  background-color: #5cb2b1;
  padding: 5rpx;
}

.grid{
  display: flex;
}
.grid-content{
  width: 11.11111%;
}

.text-content{
  margin: 5rpx;
  padding-top: calc(100% - 10rpx);
  border-radius: 10rpx;
  background-color: #b0ddda;
  position: relative;
  overflow: hidden;
}

.empty{
  background-color: #fff;
}

.num-content.hasNumber{
  background-image: radial-gradient(#fff, #a5eacb);
  color: #f97000;
}
.num-content.selected{
  background-color: rgba(255,81,4, 0.7);
  background-image: linear-gradient(45deg, orangered 25%, transparent 25%, transparent),
                      linear-gradient(-45deg, orangered 25%, transparent 25%, transparent),
                      linear-gradient(45deg, transparent 75%, orangered 75%),
                      linear-gradient(-45deg, transparent 75%, orangered 75%);
  color: #fff;
  background-size: 20rpx 20rpx;
}

.num-content{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
  color: #0b71fa;
}

.num-text{
  display: flex;
  align-items: center;
  justify-content: center;
}

.input-wrap{
  justify-content: space-between;
}

.input-item{
  flex: 1;
  font-size: 50rpx;
  color: orangered;
  background-color: #ffffff99;
  text-align: center;
  background: #fff;
  border-radius: 10rpx;
  height: 70rpx;
  margin: 10rpx;
  font-weight: bold;
  line-height: 70rpx;
}

.delete, .pause, .mark, .restart{
  font-size: 30rpx;
  color: #fff;
}

.delete{
  background: #9b58e5;
}
.pause{
  background: #6e62f2;
}
.mark{
  background: #ec716c;
}
.restart{
  background: #dd62ca;
}

.num-container{
  margin-top: 60rpx;
}

.grid-content .error{
  animation: color 2s infinite !important;
  color: #fff;
}

@keyframes color{
  0%{
    background-color: orange;
  }
  50%{
    background-color: #6e62f2;
  }
  100%{
    background-color: orange;
  }
}
